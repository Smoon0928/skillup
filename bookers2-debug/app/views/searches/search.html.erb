<h2>Books search for"<%= @word %>"</h2> 

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
     <tr>
        <td><%= link_to new_user_path(user) do %>
          <%= image_tag user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to user.name %></td>
        <!--<td><#%= link_to book.title,book %></td>-->
        <!--<td><#%= book.body %></td>-->
      </tr>
    <% end %>
  </tbody>

  <% else %>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
  <% end %>
</table>